    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Jest (related tests)",
            "type": "node",
            "request": "launch",
            "program": "${workspaceFolder}/node_modules/.bin/jest",
            "args": ["--runInBand", "--testTimeout=3600000", "--findRelatedTests", "${relativeFile}"],
            "runtimeArgs": ["--no-warnings", "--experimental-modules", "--experimental-vm-modules"],
            "skipFiles": [
                "<node_internals>/**/*.js",
                "${workspaceFolder}/node_modules/jest*",
                "${workspaceFolder}/node_modules/@jest*",
                "${workspaceFolder}/node_modules/jsdom*"
            ]
        }
    ]
}
